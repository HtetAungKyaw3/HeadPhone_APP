<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003C9D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LE Audio Switch"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/log_shape"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonLeAudioOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:text="ON"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButtonLeAudioOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:text="OFF"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btnGetLeAudioState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get LE Audio State"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>