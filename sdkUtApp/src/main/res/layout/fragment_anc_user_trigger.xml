<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003C9D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            ã€€
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="USER TRIGGER OPERATION"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/log_shape"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lib Version:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textLibVersion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NA"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Model:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinModel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="right"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Target Filter:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textAncUserTriggerTargetFilter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NA"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Result:"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textAncUserTriggerResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NA"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">

                        <TextView
                            android:id="@+id/textAncUserTriggerNotice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Please avoid swallowing, talking, walking or turning your head, etc."
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorRed"
                            android:visibility="gone"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnStartAncUserTrigger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start ANC User Trigger" />

                    <Button
                        android:id="@+id/btnStopAncUserTrigger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stop ANC User Trigger"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnRestoreAncUserTriggerCoef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restore ANC User Trigger Coefficient"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnSetBypassFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set ANC User Trigger Coefficient As Bypass"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="SWITCH ANC FILTER"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/log_shape"
                    android:layout_weight="2"
                    android:padding="2dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANC Filter1"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_anc_filter1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16sp"
                                    android:textAlignment="textEnd"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANC Filter2"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_anc_filter2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16sp"
                                    android:textAlignment="textEnd"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANC Filter3"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_anc_filter3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16sp"
                                    android:textAlignment="textEnd"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANC Filter4"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_anc_filter4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16sp"
                                    android:textAlignment="textEnd"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Pass Through1"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_pass_through1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Pass Through2"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_pass_through2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Pass Through3"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_pass_through3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANC Off"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <RadioButton
                                    android:id="@+id/radioButton_mmi_anc_pt_off"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:drawableRight="@android:drawable/btn_radio"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout_mmi_realtime_anc_gain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/log_shape"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="RealTime ANC Gain"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout_anc_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/seekBar_anc_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_weight="12"
                                android:enabled="false"
                                android:progress="2000"
                                android:max="2000"/>

                            <TextView
                                android:id="@+id/textView_anc_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="dB" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout_mmi_realtime_passthru_gain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/log_shape"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="RealTime Pass Through Gain"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout_passthru_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/seekBar_passthru_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_weight="12"
                                android:enabled="false"
                                android:progress="2000"
                                android:max="2000"/>

                            <TextView
                                android:id="@+id/textView_passthru_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="dB" />
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/buttonGetAncStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Get ANC SETTING" />
                    <Button
                        android:id="@+id/buttonSetAncStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:visibility="gone"
                        android:text="SET ANC SETTING" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ear Canal Compensation Status"
                    android:textColor="#FFFFFF"
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/log_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radioButton_ear_canal_compensation_enable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableRight="@android:drawable/btn_radio"
                                android:text="Enable"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/radioButton_ear_canal_compensation_disable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableRight="@android:drawable/btn_radio"
                                android:text="Disable"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </RadioGroup>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnGetEarCanalCompensationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get Ear Canal Compensation Status"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>