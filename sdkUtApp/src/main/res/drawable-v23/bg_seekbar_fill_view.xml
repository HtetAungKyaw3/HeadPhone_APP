<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false" android:state_enabled="true" android:state_selected="false">
        <layer-list>
            <item android:width="6dp" android:height="6dp" android:bottom="-3dp" android:gravity="bottom">
                <shape android:shape="oval">
                    <size android:width="6dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="3dp" android:top="-3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_001E78_50" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_activated="true">
        <layer-list>
            <item android:width="6dp" android:height="6dp" android:top="-3dp">
                <shape android:shape="oval">
                    <size android:width="6dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="0dp" android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_001E78_50" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="false" android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item android:width="6dp" android:height="6dp" android:bottom="-3dp" android:gravity="bottom">
                <shape android:shape="oval">
                    <size android:width="6dp" />
                    <solid android:color="#AEAEAE" />
                </shape>
            </item>
            <item android:bottom="3dp" android:top="-3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_001E78_50" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>