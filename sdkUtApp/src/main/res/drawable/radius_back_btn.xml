<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="29dip" />
            <stroke android:width="1dip" android:color="#E6E7ED" />
            <gradient android:angle="-90" android:startColor="#E6E7ED" android:endColor="#E6E7ED"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="29dip" />
            <stroke android:width="1dip" android:color="#CDDC39" />
            <solid android:color="#FFEB3B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="29dip" />
            <stroke android:width="1dip" android:color="#EDEDED" />
            <gradient android:angle="-90" android:startColor="#EDEDED" android:endColor="#EDEDED" />
        </shape>
    </item>
</selector>