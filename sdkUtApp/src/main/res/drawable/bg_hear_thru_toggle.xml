<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="52dp" android:height="32dp" />
                    <solid android:color="@color/blue_001E78" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="24dp" android:right="4dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="52dp" android:height="32dp" />
                    <solid android:color="@color/gray_EDEDED" />
                    <corners android:radius="40dp" />
                    <stroke android:width="1dp" android:color="@color/blue_001E78" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="8dp" android:right="28dp" android:top="8dp">
                <shape android:shape="oval">
                    <solid android:color="@color/blue_001E78" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

